{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "command -v ffmpeg || (apt-get update -qq 2>/dev/null && apt-get install -y -qq libheif1 libheif-dev ffmpeg 2>/dev/null) || (sudo apt-get update -qq && sudo apt-get install -y -qq libheif1 libheif-dev ffmpeg)"
          },
          {
            "type": "command",
            "command": "pip3 install -r requirements.dev.txt"
          },
          {
            "type": "command",
            "command": "pip3 install -r requirements.native.txt || true"
          },
          {
            "type": "command",
            "command": "DJANGO_SETTINGS_MODULE=flipfix.settings.dev python3 manage.py migrate --no-input || true"
          }
        ]
      }
    ]
  }
}
