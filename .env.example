# Django Configuration
# Copy this file to .env and update with your actual values

# Generate a new SECRET_KEY with:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here

# Set to False in production
DEBUG=True

# Comma-separated list of allowed hosts (required in production when DEBUG=False)
# Example: ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# Default admin users (for automatic admin creation during deployment)
# The command will create three default admins: admin, moses, william
# To override, provide a JSON array with custom user configurations:
# ADMIN_USERS='[{"username": "admin", "email": "admin@prod.com", "first_name": "Admin", "last_name": "User", "password": "SecurePass123"}]'
# If not set, the script uses built-in defaults for local development

# Rate limiting for public report submissions (per IP)
REPORT_SUBMISSION_RATE_LIMIT_MAX=5
REPORT_SUBMISSION_RATE_LIMIT_WINDOW_SECONDS=600
